<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       xmlns:myrpc="http://www.lonfe.com/schema/myrpc"       xsi:schemaLocation="       http://www.springframework.org/schema/beans       http://www.springframework.org/schema/beans/spring-beans.xsd       http://www.lonfe.com/schema/myrpc       http://www.longfe.com/schema/myrpc.xsd">    <bean id="client" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">        <property name="serviceUrl">            <value>http://localhost:8088/hello</value>        </property>        <property name="serviceInterface">            <value>com.lonfe.service.HelloService</value>        </property>    </bean>    <myrpc:reference id="hello" interface="com.lonfe.service.HelloService" url="http://localhost:8088/hello"/>    <myrpc:reference id="person" interface="com.lonfe.service.PersonService" url="http://localhost:8088/person"/></beans>